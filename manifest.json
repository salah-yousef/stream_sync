{
  "manifest_version": 2,
  "name": "stream together!",
  "version": "0.1",
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*.netflix.com/*",
        "https://*.netflix.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_security_policy":"script-src 'self' https://apis.google.com; object-src 'self'",
  "browser_action": {
    "default_icon": "ct.png",
    "default_popup": "index.html",
    "default_title": "Generate a maze!"
  }
}